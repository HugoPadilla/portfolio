const steps = [
  {
    title: "Requerimientos",
    subtitle: "An치lisis y Alcance",
    icon: "playlist_add_check",
  },
  {
    title: "Arquitectura",
    subtitle: "Dise침o del Sistema",
    icon: "architecture",
  },
  {
